<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_popup_watch.vcss_c" />
	</styles>

	<snippets>
		<snippet name="WatchLeague">
			<Panel class="WatchLeague">
				<Image id="LogoImage" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAVRPopupWatch class="PopupPanel Hidden">
		<Panel id="Contents">
			<Panel class="WatchColumn">
				<Label class="WatchColumnTitle" text="Watch Live" />
				<Panel id="LiveMatchList" class="WatchList" />
			</Panel>
			<Panel class="WatchColumn">
				<Label class="WatchColumnTitle" text="Watch Friends" />
				<Panel id="FriendMatchList" class="WatchList" />
			</Panel>
			<Panel class="WatchColumn">
				<Label class="WatchColumnTitle" text="Watch Tournaments" />
				<Panel id="LeaguesList" class="WatchList" />
			</Panel>
		</Panel>
		<Panel class="PopupButtonRow">
			<TextButton class="PopupButton" text="#DOTA_Cancel" onactivate="UIPopupButtonClicked()" />
		</Panel>
	</DOTAVRPopupWatch>
</root>
