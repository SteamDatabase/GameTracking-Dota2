<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/hud_reborn.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_scoreboard.vcss_c" />
		<include src="s2r://panorama/styles/custom_ui.vcss_c" />
	</styles>

	<DOTAScoreboardPlayer class="LeftRightFlow EmptyPlayerRow">
		<Panel id="PlayerColor"/>
		<DOTAAvatarImage id="AvatarImage" class="ScoreboardAvatar"/>
		<DOTAEventLevelShield id="EventLevelShield" class="ScoreboardLevelShield" />
		<DOTAHeroImage id="HeroImage" class="ScoreboardHeroImage">
			<Panel id="HeroInspectIcon"/>
		</DOTAHeroImage>
		<Panel id="PlayerAndHeroNameContainer" class="TopBottomFlow">
			<Panel id="PlayerNameAndIconRow" class="LeftRightFlow">
				<Panel id="PlayerIconPanel" />
				<DOTAEventCrestImage id="TeamCrest"/>
				<Label id="PlayerNameLabel" class="PlayerNameLabel" text="{g:dota_player_name:nc:nh:player_id}" html="true" />
			</Panel>
			<Label id="HeroNameLabel" class="HeroNameLabel" text=""/>			
		</Panel>
		
		<DOTATalentDisplay id="TalentTree" class="TalentTree" />
		
		<DOTAXP id="ScoreboardXP" class="ScoreboardXP"/>
		<Panel id="GoldContainer">
			<Panel id="ScoreboardBuybackIndicator" class="ScoreboardBuybackIndicator BuybackReady" onmouseout="UIHideTextTooltip();" onmouseover="UIShowTextTooltip( #DOTA_StatTooltip_Buyback_Ready );"/>
			<Label class="ScoreboardGold MonoNumbersFont" text="{u:gold}"/>		
		</Panel>
		<Label class="KDANumbers KDAKills MonoNumbersFont" text="{d:kills}"/>
		<Label class="KDANumbers MonoNumbersFont" text="{d:deaths}"/>
		<Label class="KDANumbers MonoNumbersFont" text="{d:assists}"/>
		<Panel id="ScoreboardUltIndicator">
            <Label id="UltCooldownSeconds" text="{d:ult_cooldown}"/>
            <Panel id="UltIcon" class="ScoreboardUltIndicator UltNotLearned"/>
		</Panel>
		<Panel id="ScoreboardMuteButtons" class="LeftRightFlow">
			<ToggleButton id="VoiceMute" class="ScoreboardMuteButton Voice" onactivate="DOTAPlayerMuteChanged()" onmouseover="UIShowTextTooltip( DOTA_UserMenu_Mute_Voice )" onmouseout="UIHideTextTooltip()" />
			<ToggleButton id="TextMute" class="ScoreboardMuteButton Text" onactivate="DOTAPlayerMuteChanged()" onmouseover="UIShowTextTooltip( DOTA_UserMenu_Mute_Text )" onmouseout="UIHideTextTooltip()" />
			<Button id="OverwatchReportButton" class="ScoreboardMuteButton" onactivate="DOTAPlayerOverwatchReport()" onmouseover="UIShowTextTooltip( dota_popup_report_player_title )" onmouseout="UIHideTextTooltip()" />
		</Panel>
		<Panel id="ArcanaContent">
			<Panel id="ArcanaContentForeground" class="Background" onmouseover="UIShowTextTooltip( #DOTA_HUD_Scoreboard_WKArcanaNeeded )"  onmouseout="UIHideTextTooltip()"/>
			<Panel id="ArcanaContentBackground" class="Foreground" onmouseover="UIShowTextTooltip( #DOTA_HUD_Scoreboard_WKArcanaKilled )"  onmouseout="UIHideTextTooltip()" />
			<Label id="ArcanaContentLabel" html="true"/>
		</Panel>
		<Panel id="TipControls">
			<Label id="TipsAvailable" text="#DOTA_Scoreboard_TipsAvailable" />
			<Label id="TipsCooldown" class="MonoNumbersFont" text="#DOTA_Scoreboard_TipCooldown" />
			<Button id="TipButton" onactivate="DOTAPlayerTip()">
				<Panel id="TipIcon" />
				<Label text="{s:tip_name}" hittest="false" />
			</Button>
    </Panel>
    <Panel id="BountyControls">
      <Label id="BountiesAvailable" text="#DOTA_Scoreboard_BountiesAvailable" />
      <Label id="BountyTimer" text="#DOTA_Scoreboard_BountyTimer" />
      <Button id="BountyButton" class="BattlePassBrightButton" onactivate="DOTAPlayerBounty()" onmouseover="UIShowTextTooltip( DOTA_Scoreboard_BountyTooltip )" onmouseout="UIHideTextTooltip()">
        <Panel id="BountyIcon" />
        <Label text="#DOTA_Scoreboard_SetBounty" hittest="false" />
      </Button>
      <Label id="BountyCancelTimer" text="#DOTA_Scoreboard_BountyCancelTimer" />
      <Button id="BountyCancelButton" class="BattlePassRedButton" onactivate="DOTAPlayerBountyCancel()">
        <Label text="#DOTA_Scoreboard_CancelBounty" hittest="false" />
      </Button>
    </Panel>
		<Panel id="AllStarControls">
			<Label id="Score" class="IsTopPlayer" text="{d:allstar_score}" hittest="false" />
			<!-- <Panel id="AllStarPointIcon" /> -->
		</Panel>
	</DOTAScoreboardPlayer>
</root>