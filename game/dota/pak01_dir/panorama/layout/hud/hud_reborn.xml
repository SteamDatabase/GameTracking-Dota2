	<script>
	function EventAbilityLearnModeToggled( bInLearnMode )
	{
		$.GetContextPanel().SetHasClass( "AbilityLearnMode", bInLearnMode );
	}

	function ShowStatBranchTooltip()
	{
		var statBranchPopup = $("#statbranchdialog");
		if ( statBranchPopup != null && statBranchPopup.BHasClass( "ShowStatBranch" ) )
			return;

		var panel = $("#level_stats_frame");
		
		if ( panel != null )
		{
			if ( panel.BHasClass( "CanLevelStats" ) )
			{
				panel = panel.FindChildTraverse( "LevelUpButton" );
			}
			else
			{
				panel = $("#StatBranch");
			}
			if ( panel != null )
			{
				$.DispatchEvent( 'DOTAHUDShowStatBranchTooltip', panel );
			}
		}
	}

	(function()
	{
		$.RegisterForUnhandledEvent( "DOTAHUDAbilityLearnModeToggled", EventAbilityLearnModeToggled );
	})();
	</script>

