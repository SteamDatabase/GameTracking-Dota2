<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_spectator_items.vcss_c" />
	</styles>
	<DOTASpectatorItems hittest="false" class="Hidden" >
		<Panel id="MainContainer" hittest="false" >
			<Button id="CloseButton" onactivate="DOTAHUDToggleSpectatorItems()" />

			<Panel id="Header">
				<Label id="ItemsLabel" class="HeaderItem" text="#DOTA_HUD_Spec_Items_Items" />
				<Label id="SlotItemsLabel" class="HeaderItem" text="#DOTA_HUD_Spec_Items_SlotItems" />
				<Label id="NeutralItemsLabel" class="HeaderItem" text="#DOTA_HUD_Spec_Items_NeutralItems" />
				<Label id="MiscItemsLabel" class="HeaderItem" text="#DOTA_HUD_Spec_Items_MiscItems" />
			</Panel>
			
			<Label id="RadiantTeamLabel" text="{s:radiant_team_name}" />
			<Panel id="RadiantItemsContainer" hittest="false" />
			
			<Label id="DireTeamLabel" text="{s:dire_team_name}" />
			<Panel id="DireItemsContainer" hittest="false" />
		</Panel>
	</DOTASpectatorItems>
</root>


