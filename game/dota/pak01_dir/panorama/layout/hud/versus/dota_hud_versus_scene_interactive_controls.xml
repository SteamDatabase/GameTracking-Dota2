		<include src="s2r://panorama/styles/hud/versus/dota_hud_versus_scene_interactive_controls.vcss_c" />
	</styles>

	<DOTAHudVersusSceneInteractiveControls>
		
		<Label id="InteractiveControlsLabel" text="#DOTA_TI2020_VS_Interactive_Label" />
		<Panel id="ControlsContainer">
			<!-- <Panel class="Spacer" /> -->
			<!-- <Panel class="ActionLeftSpacer" /> -->
			<DOTAHudVersusScenePickerWheelButton class="InteractButton AnimationControls" picker-wheel-type="0" acceptsinput="true">
				<Panel class="InteractButtonBackground" hittest="false" />
				<Panel class="CooldownRadialSweep" hittest="false" />
				<Label class="InteractiveButtonLabel" hittest="false" text="#DOTA_TI2020_VS_Interactive_Label_Taunts" />
			</DOTAHudVersusScenePickerWheelButton>
			<Panel class="SmallSpacer" />
			<!-- <Panel class="InteractButton PlaybackRate" acceptsinput="true" onactivate="DOTAVersusScreenTogglePause()" >
				<Panel class="PlayImage PlaybackRateImage" hittest="false" />
				<Panel class="PauseImage PlaybackRateImage" hittest="false" />
				<Label class="HotkeyDesc" hittest="false" text="{s:spacebar}" />
			</Panel> -->
			<!-- <Panel class="Spacer" />
			<Label id="InteractiveControlsLabel" text="#DOTA_TI2020_VS_Interactive_Label" /> -->
			<DOTAHudVersusScenePickerWheelButton class="InteractButton ChatControls" picker-wheel-type="1" picker-wheel-type-alt="2" acceptsinput="true">
				<Panel class="InteractButtonBackground" hittest="false" />
				<Panel class="CooldownRadialSweep" hittest="false" />
				<Label class="InteractiveButtonLabel" hittest="false" text="#DOTA_TI2020_VS_Interactive_Label_Chat" />
				<Panel class="HotkeyContainer" hittest="false" hittestchildren="false">
					<Panel class="Hotkey">
						<Label class="HotkeyText" text="{s:hotkey}" />
					</Panel>
					<Panel class="HotkeyModifier">
						<Label class="AltText" text="#DOTA_Keybind_ALT" />
					</Panel>
				</Panel>				
			</DOTAHudVersusScenePickerWheelButton>
			<Panel class="SmallSpacer" />
			<!-- <Panel class="Spacer PlusOnly" /> -->
			<DOTAHudVersusScenePickerWheelButton class="InteractButton PlusChatControls PlusOnly" picker-wheel-type="3" acceptsinput="true" >
				<Panel class="InteractButtonBackground" hittest="false" />
				<Panel class="CooldownRadialSweep" hittest="false" />
				<Label class="InteractiveButtonLabel" hittest="false" text="#DOTA_TI2020_VS_Interactive_Label_HeroLines" />
				<Panel class="HotkeyContainer" hittest="false" hittestchildren="false">
					<Panel class="Hotkey">
						<Label class="HotkeyText" text="{s:hotkey}" />
					</Panel>
					<Panel class="HotkeyModifier">
						<Label class="AltText" text="#DOTA_Keybind_ALT" />
					</Panel>
				</Panel>				
			</DOTAHudVersusScenePickerWheelButton>	
