<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/versus/dota_hud_versus_scene_team_info.vcss_c" />
	</styles>

	<DOTAHudVersusSceneTeamInfo>
		
		<Panel id="SimpleTeamInfo">
			<Label id="SimpleTeamName" class="TitleFont" text="{s:team_name}" />
			<DOTAScenePanel id="DireTitleFX" class="TitleFX" map="scenes/hud/versus_dire" camera="camera" renderdeferred="false" particleonly="false" hittest="false"/>
			<DOTAScenePanel id="RadiantTitleFX" class="TitleFX" map="scenes/hud/versus_radiant" camera="camera" renderdeferred="false" particleonly="false" hittest="false"/>
		</Panel>
		
		<Panel id="RegisteredTeamInfo">
			<DOTAUGCImage id="TeamLogo" />
			<Panel id="RegisteredTeamDetails">
				<Label id="RegisteredTeamName" class="TitleFont" text="{s:team_name}" />
				<Label id="RegisteredDotaTeamName" text="{s:dota_team_name}" />
				<DOTAScenePanel id="DireTeamTitleFX" class="TitleFX" map="scenes/hud/versus_dire" camera="camera" renderdeferred="false" particleonly="false" hittest="false"/>
				<DOTAScenePanel id="RadiantTeamTitleFX" class="TitleFX" map="scenes/hud/versus_radiant" camera="camera" renderdeferred="false" particleonly="false" hittest="false"/>

			</Panel>
		</Panel>

	</DOTAHudVersusSceneTeamInfo>

</root>
