<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_menu_buttons.vcss_c" />
	</styles>
	<DOTAHudMenuButtons hittest="false" >
		<Panel id="ButtonBar" hittest="false" require-composition-layer="true" always-cache-composition-layer="true" >
			<Button id="DashboardButton" onactivate="DOTAHUDShowDashboard();" onmouseover="UIShowTextTooltip( DOTA_HUD_BackToDashboard )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="SettingsButton" onactivate="DOTASettings();" onmouseover="UIShowTextTooltip( DOTA_HUD_Settings )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="ToggleScoreboardButton" onactivate="DOTAHUDToggleScoreboard();" onmouseover="UIShowTextTooltip( DOTA_HUD_Scoreboard )"  onmouseout="UIHideTextTooltip()"/>

			<Panel id="AntiAddictionWarning" />
		</Panel>
		<Panel id="SpectatorButtonBar" hittest="false" require-composition-layer="true" always-cache-composition-layer="true" >
			<Button id="SpectatorItemsButton" onactivate="DOTAHUDToggleSpectatorItems();" />
			<Button id="GoldGraphButton" onactivate="DOTAHUDToggleGoldGraph();" />
			<Button id="XPGraphButton" onactivate="DOTAHUDToggleXPGraph();" />
			<Button id="SpectatorOptionsButton" onactivate="DOTAToggleSpectatorOptionsVisible();" />
			<Button id="DisconnectButton" onactivate="DOTAHUDGameDisconnect();" />
		</Panel>
	</DOTAHudMenuButtons>
</root>


