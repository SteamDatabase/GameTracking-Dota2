<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_hero_pick_timeline.vcss_c" />
	</styles>

	<snippets>
		<snippet name="TimelineSegment">
			<Panel class="TimelineSegment">
				<Label id="PickBanLabel" text="{s:pick_ban_label}" />
				<Label id="PhaseTimeLabel" text="{s:phase_time}" />
				<Panel id="Block" />
				<Panel id="Arrow" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAHeroPickTimeline hittest="false">
		<Label id="ReserveTime" text="#dota_cm_bonus_time" />
		<Label id="Time0" text="{s:time_0}" />
		<Label id="Time1" text="{s:time_1}" />
		<Panel id="AegisIcon" />
		<Label id="BattleBegins" text="Battle Begins" />
		<Panel id="TimelineSegments" />
	</DOTAHeroPickTimeline>
</root>

