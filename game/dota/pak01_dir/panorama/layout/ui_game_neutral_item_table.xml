<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_game_neutral_item_table.vcss_c" />
	</styles>
	
	<snippets>
		<snippet name="NeutralItemsTier">
			<Panel class="NeutralItemsTier">
				<Panel class="NeutralItemsTierHeader">
					<Label class="NeutralItemsTierName" text="#DOTA_Shop_NeutralTier" />
					<Panel class="FillWidth" />
					<Panel class="LeftRightFlow" onmouseout="UIHideTextTooltip();" onmouseover="UIShowTextTooltip( #DOTA_NeutralItemSlot_TimeTip );">
						<Panel class="Clock"/>
						<Label class="NeutralItemsTierTimes" text="{s:tier_times}" />
					</Panel>
				</Panel>
				<Panel id="NeutralItemsList" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAGameNeutralItemTable>

		<Panel id="NeutralItems">
			<Label class="ColumnTitle" text="#DOTA_HeroGuide_NeutralItemLabel" />
			<Panel id="NeutralItemsTable" />
		</Panel>

	</DOTAGameNeutralItemTable>
</root>
