<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hero_badge.vcss_c" />
	</styles>

	<snippets>
		<snippet name="IconStyle">
			<DOTAHeroBadge class="IconStyle" />
		</snippet>
		<snippet name="LevelStyle">
			<DOTAHeroBadge class="LevelStyle">
				<Label text="{d:hero_level}" />
			</DOTAHeroBadge>
		</snippet>
		<snippet name="ModelStyle">
			<DOTAHeroBadge class="ModelStyle">
				<DOTAScenePanel id="RankScene" map="scenes/hero_level_icon" camera="shot_camera" renderdeferred="true" deferredalpha="true" antialias="true" hittest="false" particleonly="false" />
				<Label text="{d:hero_level}" />				
			</DOTAHeroBadge>
		</snippet>
	</snippets>
	
	<DOTAHeroBadge>
		<!-- One of the 3 snippets above will be loaded onto this -->
	</DOTAHeroBadge>

</root>
