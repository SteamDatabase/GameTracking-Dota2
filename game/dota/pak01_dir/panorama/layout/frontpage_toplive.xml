<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_backgroundmap.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_toplive.vcss_c" />
	</styles>

	<DOTAFrontpageTopLive>
		<Panel class="CellBackground Blur">
			<Panel id="MapPreview">
				<Image id="MapBG"/>
				<Panel id="MapBuildingLayer"/>
				<Panel id="MapHeroLayer"/>
			</Panel>
		</Panel>
		<Panel class="OverlayGradient"/>
		<DOTAUGCImage id="Team1" class="TeamLogo"/>
		<DOTAUGCImage id="Team2" class="TeamLogo"/>
		<Label id="RankedMMR" class="GameInfo" text="#DOTA_WatchLive_ParticipantsMMR" html="true"/>
		<Label id="UnrankedMMR" class="GameInfo" text="#DOTA_WatchLive_ParticipantsUnranked" html="true"/>
		<Label id="Teams" class="GameInfo" text="#DOTA_WatchLive_ParticipantsVs" html="true"/>
		<Label id="Score" text="{i:radiant_score} - {i:dire_score}" />
		<Label id="Spectators" text="#DOTA_WatchLive_CountSpec" />
		<Label class="FrontpageCellHeader" text="#DOTA_Frontpage_WatchLive_Title" />
	</DOTAFrontpageTopLive>
</root>
