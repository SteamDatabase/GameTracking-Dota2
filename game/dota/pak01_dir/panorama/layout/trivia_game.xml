<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/current_battle_pass.vcss_c" />
		<include src="s2r://panorama/styles/trivia_game.vcss_c" />
	</styles>
	
	<snippets>
		<snippet name="Question_AbilityIcon">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_AbilityIcon" />
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		<snippet name="Question_AbilityCooldown">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_AbilityCooldown" />
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		<snippet name="Question_AbilityManaCost">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_AbilityManaCost" />
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		<snippet name="Question_HeroAttributes">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_HeroAttributes" />
				<Panel class="HeroAttributesRow">
					<Panel class="HeroAttributesIcon Strength" />
					<Label class="MonoNumbersFont" text="#DOTA_HeroLoadout_StrengthAttribute" />
				</Panel>
				<Panel class="HeroAttributesRow">
					<Panel class="HeroAttributesIcon Agility" />
					<Label class="MonoNumbersFont" text="#DOTA_HeroLoadout_AgilityAttribute" />
				</Panel>
				<Panel class="HeroAttributesRow">
					<Panel class="HeroAttributesIcon Intelligence" />
					<Label class="MonoNumbersFont" text="#DOTA_HeroLoadout_IntelligenceAttribute" />
				</Panel>
			</Panel>
		</snippet>
		<snippet name="Question_HeroStats">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_HeroStats" />
				<Panel class="HeroStatsRow">
					<Panel class="HeroStatsIcon Damage" />
					<Label class="MonoNumbersFont" text="{d:damage_min} - {d:damage_max}" />
				</Panel>
				<Panel class="HeroStatsRow">
					<Panel class="HeroStatsIcon Armor" />
					<Label class="MonoNumbersFont" text="{d:armor}" />
				</Panel>
				<Panel class="HeroStatsRow">
					<Panel class="HeroStatsIcon MovementSpeed" />
					<Label class="MonoNumbersFont" text="{d:movement_speed}" />
				</Panel>
			</Panel>
		</snippet>
		<snippet name="Question_HeroMovementSpeed">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_HeroMovementSpeed" />
				<DOTAHeroImage id="HeroImage" />
			</Panel>
		</snippet>
		<snippet name="Question_TalentTree">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_TalentTree" />
				<Panel class="TalentTreeRow">
					<Label id="TalentName8" class="TalentName Left" />
					<Label class="TalentLevel" text="25" />
					<Label id="TalentName7" class="TalentName Right" />
				</Panel>
				<Panel class="TalentTreeRow">
					<Label id="TalentName6" class="TalentName Left" />
					<Label class="TalentLevel" text="20" />
					<Label id="TalentName5" class="TalentName Right" />
				</Panel>
				<Panel class="TalentTreeRow">
					<Label id="TalentName4" class="TalentName Left" />
					<Label class="TalentLevel" text="15" />
					<Label id="TalentName3" class="TalentName Right" />
				</Panel>
				<Panel class="TalentTreeRow">
					<Label id="TalentName2" class="TalentName Left" />
					<Label class="TalentLevel" text="10" />
					<Label id="TalentName1" class="TalentName Right" />
				</Panel>
			</Panel>
		</snippet>
		<snippet name="Question_ItemPrice">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_ItemPrice" />
				<DOTAItemImage id="ItemImage" showtooltip="false" />
			</Panel>
		</snippet>
		<snippet name="Question_AbilitySound">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_AbilitySound" />
				<Button class="PlaySoundButton" onactivate="DOTATriviaPlayQuestionSound()">
					<Panel class="PlaySoundIcon" />
				</Button>
			</Panel>
		</snippet>
		<snippet name="Question_HeroAttackSound">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_HeroAttackSound" />
				<Button class="PlaySoundButton" onactivate="DOTATriviaPlayQuestionSound()">
					<Panel class="PlaySoundIcon" />
				</Button>
			</Panel>
		</snippet>
		<snippet name="Question_InvokerSpells">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_InvokerSpells" />
				<Panel class="InvokerSpells">
					<DOTAAbilityImage id="InvokerAbilityImage0" />
					<DOTAAbilityImage id="InvokerAbilityImage1" />
					<DOTAAbilityImage id="InvokerAbilityImage2" />
				</Panel>
			</Panel>
		</snippet>
		<snippet name="Question_AbilityName">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_AbilityName" />
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		<snippet name="Question_ItemComponents">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_ItemComponents" />
				<Panel id="ItemComponents">
					<!-- DOTAItemImage added dynamically -->
				</Panel>
			</Panel>
		</snippet>
		<snippet name="Question_ItemLore">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_ItemLore" />
				<Label class="ItemLoreText" text="&quot;{s:item_lore}&quot;" />
			</Panel>
		</snippet>
		<snippet name="Question_ItemPassives">
			<Panel>
				<Label class="QuestionText" text="#DOTA_Trivia_Question_ItemPassives" />
				<Label class="ItemPassivesText" text="{s:item_passives}" html="true" />
			</Panel>
		</snippet>
		
		<snippet name="Answer_Text">
			<Panel>
				<Label text="{s:answer_text}" html="true" />
			</Panel>
		</snippet>
		<snippet name="Answer_HeroIcon">
			<Panel>
				<DOTAHeroImage id="HeroImage" />
			</Panel>
		</snippet>
		<snippet name="Answer_AbilityIcon">
			<Panel>
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		<snippet name="Answer_ItemIcon">
			<Panel>
				<DOTAItemImage id="ItemImage" showtooltip="false" />
			</Panel>
		</snippet>
	
	</snippets>
		
	<DOTATriviaGame acceptsfocus="true">
		<Panel id="Header">
			<Label class="CellTitle" text="#DOTA_Trivia_Title" />
			<Panel class="FillWidth" />
			<Panel class="CurrentScoreContainer" onmouseover="UIShowTitleTextTooltip( #DOTA_Trivia_Points_Tooltip_Title, #DOTA_Trivia_Points_Tooltip_Text )" onmouseout="UIHideTitleTextTooltip()">
				<Label class="CurrentScoreLabel" text="#DOTA_Trivia_Points" />
				<Label id="CurrentScore" class="MonoNumbersFont" text="{d:local_user_trivia_points}" />
			</Panel>
		</Panel>

		<Panel id="TriviaMain">
				
			<Panel id="TriviaInactive" class="TriviaMainContents">
				<Panel id="TriviaInactiveContents">

					<Panel class="TriviaLogo" />
					
					<Label id="LoadingQuestionStatus" class="InactiveStatus" text="#DOTA_Trivia_LoadingNextQuestion" />
					<Label id="ErrorDisplayingQuestionStatus" class="InactiveStatus" text="#DOTA_Trivia_ErrorDisplayingQuestion" />
					<Label id="NotInQueueStatus" class="InactiveStatus" text="#DOTA_Trivia_NotInQueue" />
					<Label id="WaitingToConnectStatus" class="InactiveStatus" text="#DOTA_Trivia_WaitingToConnect" />
					<Label id="ConnectingStatus" class="InactiveStatus" text="#DOTA_Trivia_Connecting" />
					<Label id="DisabledStatus" class="InactiveStatus" text="#DOTA_Trivia_Disabled" />
					<Label id="BattlePassNotOwnedStatus" class="InactiveStatus" text="#DOTA_Trivia_NoBattlePass" />

					<Panel id="InactiveSpinner">
						<Label id="InactiveSpinnerPart0" class="InactiveSpinnerPart" text="?" />
						<Label id="InactiveSpinnerPart1" class="InactiveSpinnerPart" text="?" />
						<Label id="InactiveSpinnerPart2" class="InactiveSpinnerPart" text="?" />
						<Label id="InactiveSpinnerPart3" class="InactiveSpinnerPart" text="?" />
						<Label id="InactiveSpinnerPart4" class="InactiveSpinnerPart" text="?" />
					</Panel>
					
					<Label id="NextAttemptUpcomingTime" class="InactiveUpcomingTime MonoNumbersFont" text="#DOTA_Trivia_AttemptUpcoming" />
					<Label id="NextQuestionUpcomingTime" class="InactiveUpcomingTime MonoNumbersFont" text="#DOTA_Trivia_QuestionUpcoming" />
				</Panel>
			</Panel>
				
			<Panel id="QuestionActive" class="TriviaMainContents">
				<Panel id="QuestionContents" />

				<Panel id="Answers">
					<Panel class="AnswersRow">
						<Button id="AnswerButton0" class="AnswerButton" onactivate="DOTATriviaAnswerSelected( 0 )">
							<Panel class="AnswerInfo">
								<Label class="AnswerLetter" text="#DOTA_Trivia_AnswerLetter0" />
								<Panel class="AnswerResultsIcon" />								
							</Panel>
							<Panel id="AnswerContents0" class="AnswerContents" />
						</Button>
						<Button id="AnswerButton1" class="AnswerButton" onactivate="DOTATriviaAnswerSelected( 1 )">
							<Panel class="AnswerInfo">
								<Label class="AnswerLetter" text="#DOTA_Trivia_AnswerLetter1" />
								<Panel class="AnswerResultsIcon" />								
							</Panel>
							<Panel id="AnswerContents1" class="AnswerContents" />
						</Button>
					</Panel>
					<Panel class="AnswersRow">
						<Button id="AnswerButton2" class="AnswerButton" onactivate="DOTATriviaAnswerSelected( 2 )">
							<Panel class="AnswerInfo">
								<Label class="AnswerLetter" text="#DOTA_Trivia_AnswerLetter2" />
								<Panel class="AnswerResultsIcon" />								
							</Panel>
							<Panel id="AnswerContents2" class="AnswerContents" />
						</Button>
						<Button id="AnswerButton3" class="AnswerButton" onactivate="DOTATriviaAnswerSelected( 3 )">
							<Panel class="AnswerInfo">
								<Label class="AnswerLetter" text="#DOTA_Trivia_AnswerLetter3" />
								<Panel class="AnswerResultsIcon" />								
							</Panel>
							<Panel id="AnswerContents3" class="AnswerContents" />
						</Button>
					</Panel>
				</Panel>

				<Panel id="PhaseInfoContainer">
					
					<Panel id="PhaseAnswerableInfo" class="PhaseInfo">
						<Panel id="AnswerableContents">
							<Label class="AnswerableTimer MonoNumbersFont" text="{s:answerable_time_remaining}" />
							<Label class="AnswerableHeader" text="#DOTA_Trivia_TimeRemaining" />
						</Panel>
					</Panel>
					
					<Panel id="PhaseCalculatingResultsInfo" class="PhaseInfo">
						<Panel class="Spinner" />
					</Panel>
					
					<Panel id="PhaseDisplayingCorrectAnswerInfo" class="PhaseInfo">
						<Panel id="CorrectAnswerState" class="DisplayingAnswerState">
							<Label id="CorrectLabel" text="#DOTA_Trivia_AnswerCorrect" />
							<Label id="CorrectPointsLabel" text="#DOTA_Trivia_BasePointsGained" />
						</Panel>
						<Label id="IncorrectLabel" class="DisplayingAnswerState" text="#DOTA_Trivia_AnswerIncorrect" />
						<Label id="NoAnswerLabel" class="DisplayingAnswerState" text="#DOTA_Trivia_AnswerNotSubmitted" />
					</Panel>
					
					<Panel id="PhaseDisplayingPartyAnswersInfo" class="PhaseInfo">
						<Label class="ResultsHeaderTitle" text="#DOTA_Trivia_PartyResults" />
						<Panel id="PartyMemberResults">
							<Panel id="PartyMemberResult0" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
							<Panel id="PartyMemberResult1" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
							<Panel id="PartyMemberResult2" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
							<Panel id="PartyMemberResult3" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
							<Panel id="PartyMemberResult4" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
							<Panel id="PartyMemberResult5" class="PartyMemberResult">
								<Label class="PartyAnswerLetter" text="{s:answer_letter}" />
								<Label class="PartyMemberName" text="{g:dota_persona:party_member_account_id}" html="true" />
								<Panel class="FillWidth" />
								<Label class="PartySessionScore MonoNumbersFont" text="{d:questions_correct}/{d:questions_viewed}" />
								<Label class="PartySessionPoints MonoNumbersFont" text="{d:trivia_points}" />
							</Panel>
						</Panel>
					</Panel>
					
					<Panel id="PhaseDisplayingWorldAnswersInfo" class="PhaseInfo">
						<Panel class="ResultsHeader">
							<Label class="ResultsHeaderTitle" text="#DOTA_Trivia_WorldResults" />
							<Panel class="FillWidth" />
							<Label class="WorldBonusPoints" text="#DOTA_Trivia_DifficultyBonus" />
						</Panel>
						<Panel id="WorldAnswerResult0" class="WorldAnswerResult">
							<Label class="WorldAnswerLetter" text="#DOTA_Trivia_AnswerLetter0" />
							<Panel class="WorldAnswerBarContainer">
								<Panel id="WorldAnswerBar0" class="WorldAnswerBar" />
							</Panel>
							<Label class="WorldAnswerPercent" text="{d:answer_percent}%" />
						</Panel>
						<Panel id="WorldAnswerResult1" class="WorldAnswerResult">
							<Label class="WorldAnswerLetter" text="#DOTA_Trivia_AnswerLetter1" />
							<Panel class="WorldAnswerBarContainer">
								<Panel id="WorldAnswerBar1" class="WorldAnswerBar" />
							</Panel>
							<Label class="WorldAnswerPercent" text="{d:answer_percent}%" />
						</Panel>
						<Panel id="WorldAnswerResult2" class="WorldAnswerResult">
							<Label class="WorldAnswerLetter" text="#DOTA_Trivia_AnswerLetter2" />
							<Panel class="WorldAnswerBarContainer">
								<Panel id="WorldAnswerBar2" class="WorldAnswerBar" />
							</Panel>
							<Label class="WorldAnswerPercent" text="{d:answer_percent}%" />
						</Panel>
						<Panel id="WorldAnswerResult3" class="WorldAnswerResult">
							<Label class="WorldAnswerLetter" text="#DOTA_Trivia_AnswerLetter3" />
							<Panel class="WorldAnswerBarContainer">
								<Panel id="WorldAnswerBar3" class="WorldAnswerBar" />
							</Panel>
							<Label class="WorldAnswerPercent" text="{d:answer_percent}%" />
						</Panel>
					</Panel>

				</Panel>

				<Panel id="Footer">
					<Panel id="FooterPartyMembers">
						<DOTAAvatarImage id="PartyMemberAvatar0" />
						<DOTAAvatarImage id="PartyMemberAvatar1" />
						<DOTAAvatarImage id="PartyMemberAvatar2" />
						<DOTAAvatarImage id="PartyMemberAvatar3" />
						<DOTAAvatarImage id="PartyMemberAvatar4" />
						<DOTAAvatarImage id="PartyMemberAvatar5" />
					</Panel>
					<Label id="NextQuestionTimer" text="#DOTA_Trivia_QuestionUpcoming" />
					<Label id="NextQuestionUpcoming" text="#DOTA_Trivia_LoadingNextQuestion" />
					<Panel class="FillWidth" />
					<Button id="AutoplaySoundsButton" onmouseover="UIShowTextTooltip( #DOTA_Trivia_ToggleAutoplaySounds )" onmouseout="UIHideTextTooltip()" onactivate="DOTATriviaToggleAutoplaySounds()" />
					<Button id="ChatButton" onmouseover="UIShowTextTooltip( #DOTA_Trivia_ToggleChat )" onmouseout="UIHideTextTooltip()" onactivate="DOTATriviaToggleChat()" />
					<Label id="QuestionID" text=" #{d:question_id}" />
				</Panel>
				
			</Panel>
		</Panel>
		
	</DOTATriviaGame>

</root>
