<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/plus/dashboard_page_plus_shared.vcss_c" />
		<include src="s2r://panorama/styles/plus/dashboard_page_plus_purchase.vcss_c" />
	</styles>

	<DOTAPlusPurchasePage class="DashboardPage">
		<DOTAScenePanel id="DotaPlusBackgroundMap" hittest="false" camera="shot_camera" map="backgrounds/dotaplus_dashboard_background" light="bp_light" renderdeferred="true" deferredalpha="false" particleonly="false" live-mode="high_end_only"/>
		<Panel id="BackgroundVignette" />

		<Panel id="MainContents">
			<Panel id="Header">
				<Label id="PageTitle" text="#DOTA_Plus_Profile_WindowTitle" />
				<Panel class="FillWidth" />
				<TextButton id="SubscribeButton" class="DotaPlusGoldButton" text="#DOTA_PlusUpsell_SubscribeNow" onactivate="DOTAPlusSubscribe()" />
			</Panel>
			
			<Panel id="Contents">
				<Panel id="TopContents" class="FeatureSection">
					<Panel id="HeroProgression">
						<Label class="SectionTitle" text="#DOTA_PlusPurchase_HeroProgression" />
						<Panel class="SectionDetails BottomSectionDetails">
							<Label class="SectionDescription" text="#DOTA_PlusPurchase_HeroProgression_Description" />
							<Panel class="SectionFeatures">
								<Label text="#DOTA_PlusPurchase_Feature_HeroLeveling" />
								<Label text="#DOTA_PlusPurchase_Feature_HeroChatWheel" />
								<Label text="#DOTA_PlusPurchase_Feature_HeroRelics" />
								<Label text="#DOTA_PlusPurchase_Feature_HeroChallenges" />
							</Panel>
						</Panel>

					</Panel>
					<Panel id="Assistant">
						<Label class="SectionTitle" text="#DOTA_PlusPurchase_Assistant" />
						<Panel class="SectionDetails BottomSectionDetails">
							<Label class="SectionDescription" text="#DOTA_PlusPurchase_Assistant_Description" />
							<Panel class="SectionFeatures">
								<Label text="#DOTA_PlusPurchase_Feature_ItemSuggestions" />
								<Label text="#DOTA_PlusPurchase_Feature_HeroPickSuggestions" />
								<Label text="#DOTA_PlusPurchase_Feature_ComparativeTracking" />
								<Label text="#DOTA_PlusPurchase_Feature_PostGameAnalysis" />
								<Label text="#DOTA_PlusPurchase_Feature_LaneSetupSuggestions" />
								<Label text="#DOTA_PlusPurchase_Feature_HeroTrends" />
								<Label text="#DOTA_PlusPurchase_Feature_DeathSummary" />
								<Label text="#DOTA_PlusPurchase_Feature_WinProbability" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
				<Panel id="BottomContents">
					<Panel id="Rewards" class="FeatureSection">
						<Label class="SectionTitle" text="#DOTA_PlusPurchase_Rewards" />
						<Panel class="SectionDetails RightSectionDetails">
							<Label class="SectionDescription" text="#DOTA_PlusPurchase_Rewards_Description" />
							<Panel class="SectionFeatures">
								<Label text="#DOTA_PlusPurchase_Feature_ExclusiveHeroSets" />
								<Label text="#DOTA_PlusPurchase_Feature_PurchaseHeroRelics" />
								<Label text="#DOTA_PlusPurchase_Feature_ChatWheelSounds" />
								<Label text="#DOTA_PlusPurchase_Feature_LegacyHeroSets" />
								<Label text="#DOTA_PlusPurchase_Feature_PurchaseTools" />
								<Label text="#DOTA_PlusPurchase_Feature_SeasonalItems" />
							</Panel>
						</Panel>

					</Panel>
					<Panel id="Perks" class="FeatureSection">
						<Label class="SectionTitle" text="#DOTA_PlusPurchase_Perks" />
						<Panel class="SectionDetails RightSectionDetails">
							<Label class="SectionDescription" text="#DOTA_PlusPurchase_Perks_Description" />
							<Panel class="SectionFeatures">
								<Label text="#DOTA_PlusPurchase_Feature_BattleCup" />
								<Label text="#DOTA_PlusPurchase_Feature_RankedRoles" />
								<Label text="#DOTA_PlusPurchase_Feature_Tipping" />
								<Label text="#DOTA_PlusPurchase_Feature_SeasonalTerrain" />
								<Label text="#DOTA_PlusPurchase_Feature_SeasonalQuests" />
								<Label text="#DOTA_PlusPurchase_Feature_VictoryPredictionCharm" />
								<Label text="#DOTA_PlusPurchase_Feature_WelcomeQuests" />
								<Label text="#DOTA_PlusPurchase_Feature_LiveSpectating" />
								<Label text="#DOTA_PlusPurchase_Feature_WeeklyVictoryShards" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<DOTAScenePanel id="PlusLogoScene" camera="shot_camera" map="scenes/plus_logo" renderdeferred="true" deferredalpha="true" antialias="true" hittest="false" particleonly="false"/>

	</DOTAPlusPurchasePage>

</root>
