<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_owned_item_details_gem.vcss_c" />
	</styles>
  <Panel class="GemContainer">
    <Panel class ="LeftRightFlow" >
      <Panel class="GemIconContainer">
        <Panel class="GemIcon">
          <EconItemImage id="GemIconImage" src="s2r://panorama/images/econ/sockets/gem_stat_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
          <Image class="GemIconOverlay" src="s2r://panorama/images/textures/gem_overlay_psd.vtex" scaling="stretch-to-cover-preserve-aspect"/>
          <Image class="EmptyGemIconImage" src="s2r://panorama/images/econ/sockets/gem_stat_empty_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
        </Panel>
      </Panel>
      <Panel class="GemDetails TopBottomFlow GemInscribed">
        <Panel class="GemName LeftRightFlow">
          <Label id="GemCount" text="#DOTA_econ_item_details_gem_strange_count"/>
          <Label text="#DOTA_econ_item_details_gem_description"/>
        </Panel>
        <Panel class="GemType">
          <Label text="#DOTA_econ_item_details_gem_type"/>
        </Panel>
      </Panel>
    </Panel>
    <Panel class="InfoIcon Extract" onmouseover="UIShowTextTooltip( #DOTA_Socketing_ExtractGem_Tooltip )" onmouseout="UIHideTextTooltip()"/>
    <Panel class="InfoIcon ExtractAndReset" onmouseover="UIShowTextTooltip( #DOTA_Socketing_ExtractOrResetGem_Tooltip )" onmouseout="UIHideTextTooltip()"/>
    <Panel class="InfoIcon Replace" onmouseover="UIShowTextTooltip( #DOTA_Socketing_Replace_Tooltip )" onmouseout="UIHideTextTooltip()"/>
    <Panel class="GemControls">
      <Button id="ResetGem" class="ButtonBevel HalfSizeButton ModCharge" >
        <Label text="#DOTA_econ_item_details_reset_gem"/>
      </Button>
      <Button id="ExtractGemShort" class="ButtonBevel HalfSizeButton ModCharge" >
        <Label text="#DOTA_econ_item_details_extract_gem_short"/>
      </Button>
      <Button id="ExtractGem" class="ButtonBevel ModCharge" >
        <Label text="#DOTA_econ_item_details_extract_gem"/>
      </Button>
      <Button id="AddGem" class="ButtonBevel ModCharge">
        <Label text="#DOTA_econ_item_details_add_gem" />
      </Button>
      <Button id="ReplaceGem" class="ButtonBevel ModCharge">
        <Label text="#DOTA_econ_item_details_replace_gem" />
      </Button>
      <Button class="ButtonBevel UnavailableButton ModCharge" disabled="true">
        <Label text="#DOTA_econ_item_details_style_locked"/>
      </Button>
    </Panel>
  </Panel>
</root>