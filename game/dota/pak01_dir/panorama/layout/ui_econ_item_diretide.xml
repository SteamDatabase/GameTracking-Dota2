<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_econ_item.vcss_c" />
		<include src="s2r://panorama/styles/ui_econ_item_diretide.vcss_c" />
	</styles>

	<DOTAEconItemDiretide>
		<!--
		                                                                           
			                                                 
		        
		-->
		<Panel class="HexGlow" />
