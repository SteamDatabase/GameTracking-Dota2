		</Panel>
		<Panel class="HexBackerShadow" />
		<Panel class="ItemContainer">
			<EconItemImage id="EconItemIcon" scaling="stretch-to-cover-preserve-aspect" />

			<!--
			                                                     
				                                                                                                                                                                                          
				                                                                                                                                                                                             
				                                                                                                                                                                                         
				                                                                                                                                                                                             
				                                                                                                                                                                                                
				                                                                                                                                                                                                       
				                                                                                                                                                                                             
				                                                                                                                                                                                               
			        
			-->

			<Panel class="HexBorder" />
			
			<Panel id="HexIconGleam" hittest="false" />
			
			<!--
			                                                                         
				                             
				                                                                                                                                                                        
				                                     
			        
			-->

			<!--                                                                     -->
			<!--                                        -->
			<!--                                        -->
			<!--
			                                    
				                         
			        
			-->
			<!--                                        -->
			<!--                                                                                              -->
		</Panel>

		<Panel class="RarityHex">
			<Panel class="RarityHexImage" />
			<Label class="RarityHexText" text="{s:diretide_rarity}" />
		</Panel>
	</DOTAEconItemDiretide>

</root>
