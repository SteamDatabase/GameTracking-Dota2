<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2019/bp_international2019_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_international_2019.vcss_c" />
	</styles>

	<Panel class="FrontpageTakeover">
		<Panel id="MainContents">
			<Panel id="Header">

                <Panel class="Title" />
                <Panel class="HeaderRight">
                    <Panel id="GroupStageHeaderItem" class="HeaderItem">
                        <Label class="HeaderItemTitle" text="#DOTATournamentBracketGroupPhase" />
                        <Label class="HeaderItemText" text="#DOTA_TI9_GroupStageDates" />
                    </Panel>
                    <Panel class="HeaderItem">
                        <Label class="HeaderItemTitle" text="#DOTA_CompendiumRecap_MainEvent" />
                        <Label class="HeaderItemText" text="#DOTA_TI9_MainEventDates" />
                    </Panel>

                    <Panel id="VenueHeaderItem" class="HeaderItem">
                        <Label class="HeaderItemTitle" text="#DOTA_TI9_MainEventVenue" />
                        <Label class="HeaderItemText" text="#DOTA_TI9_MainEventLocation" />
                    </Panel>
                </Panel>
			</Panel>

			<Panel id="Contents">

				<DOTAFrontpageContents id="FrontpageContents" />

				<Panel id="Activities">

<!--				SHORT FILM / HIDE WHEN TROVE GOES LIVE       -->
					<Panel class="Activity Promo" onactivate="DOTAShowShortFilmVote()">
                            <Panel id="ShortFilmImage" />
							<Label class="PromoTitle" text="#DOTA_TI9_FrontPage_ShortFilm_Title" />
                        <Panel id="PromoButtonContainer">
                            <TextButton class="PromoButton BattlePassBrightButton" text="#DOTA_TI9_FrontPage_ShortFilm_Btn" onactivate="DOTAShowShortFilmVote()" />
                        </Panel>
					</Panel>


<!--					TROVE - SHOW THIS WHEN READY / COMMENT OUT SHORT FILM        -->
<!--					<Panel class="Activity Promo" onactivate="[****LINK TO TROVE]">-->
<!--						<Panel id="TroveImage" />-->
<!--						<Label class="PromoTitle" text="#DOTA_TI9_FrontPage_Trove_Title" />-->
<!--						<Panel id="PromoButtonContainer">-->
<!--							<TextButton class="PromoButton BattlePassBrightButton" text="#DOTA_TI9_FrontPage_Trove_Btn" onactivate="[****LINK TO TROVE]" />-->
<!--						</Panel>-->
<!--					</Panel>-->



					<Countdown id="BracketPredictionsCountdown" class="ActivityCountdown" start-time="1566144000" end-time="1566262800">
						<Panel class="Activity">
							<Panel class="ActivityContents">
                                <Panel class="ActivityIcon BracketPredictionsIcon" />
								<Label class="ActivityTitle InactiveActivity" text="#DOTA_TI9_FrontPage_Bracket_Title" />
								<Panel class="ActivityUpcoming">
									<Label class="MonoNumbersFont" text="#DOTA_TI9_FrontPage_Bracket_Countdown" />
								</Panel>
								<Panel class="ActivityActive">
									<TextButton class="ActivityButton BattlePassButton" text="#DOTA_TI9_FrontPage_Bracket_Btn" onactivate="DOTAShowCompDoubleElimBracketPage( EVENT_ID_INTERNATIONAL_2019 )" />
								</Panel>
								<Panel class="ActivityFinished">
									<TextButton class="BattlePassDarkLink" text="#DOTA_TI9_FrontPage_Bracket_Btn_Results" onactivate="DOTAShowCompDoubleElimBracketPage( EVENT_ID_INTERNATIONAL_2019 )" />
								</Panel>
							</Panel>
						</Panel>
					</Countdown>

					<Countdown id="AllStarCountdown" class="ActivityCountdown" start-time="1566144000" end-time="1566262800">
						<Panel class="Activity">
							<Panel class="ActivityContents">
                                <Panel class="ActivityIcon AllStarIcon" />
								<Label class="ActivityTitle InactiveActivity" text="#DOTA_TI9_FrontPage_AllStars_Title" />
								<Panel class="ActivityUpcoming">
									<Label class="MonoNumbersFont" text="#DOTA_TI9_FrontPage_AllStars_Countdown" />
								</Panel>
								<Panel class="ActivityActive">
									<TextButton class="ActivityButton BattlePassButton" text="#DOTA_TI9_FrontPage_AllStars_Btn" onactivate="DOTAShowCompTI9AllStarPage()" />
								</Panel>
								<Panel class="ActivityFinished">
									<TextButton class="BattlePassDarkLink" text="#DOTA_TI9_FrontPage_AllStars_Btn_Results" onactivate="DOTAShowCompTI9AllStarPage()" />
								</Panel>
							</Panel>
						</Panel>
					</Countdown>

				</Panel>

			</Panel>
		</Panel>

        <Panel id="FlowersLeft" />
        <Panel id="FlowersRight" />

	</Panel>

</root>
