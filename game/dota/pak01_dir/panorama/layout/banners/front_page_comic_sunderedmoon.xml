<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_comic.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_home.vcss_c" />
	</styles>

	<CustomLayoutPanel>
		<Panel id="BackgroundStrip"/>
		<Panel id="ImagePanel" class="CloseComic">
			<Panel id="SunderedMoon" class="ComicPage">
				<Panel class="Empty"/>
				<Panel id="CoverPage" class="Page">
					<Panel id="CoverBackground"/>
					<Panel id="CoverImage" class="Page"/>
				</Panel>
			</Panel>
			<Panel id="InsidePanel" class="ComicPage">
				<Panel class="Empty"/>
				<Panel id="InsidePage" class="Page"/>
			</Panel>							
		</Panel>
		<Panel id="CustomFooter"/>
		<Label id="CustomHeader" class="DOTATodayCellHeader" text="New Comic" />
		<Label id="CustomFooterText" class="CellFooterText" tabindex="auto" text="The Sundered Moon" />
		<Label id="CustomFooterDetails" class="CellFooterDetails" tabindex="auto" text="A mysterious stranger alters the course of history" />

	</CustomLayoutPanel>
</root>
