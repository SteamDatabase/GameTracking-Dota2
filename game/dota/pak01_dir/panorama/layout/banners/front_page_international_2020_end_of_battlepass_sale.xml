<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_international_2020_end_of_battlepass_sale.vcss_c" />
	</styles>

	<DOTAFrontpageInternational2020EndOfBattlePassSale class="FrontpageCell 2CellVersion" onactivate="DOTAShowItemDefPage( 17666 )" bundle-item-def="17666">

		<Panel class="BackgroundImage" />
		<Panel class="BundleImage" />
		<DOTAScenePanel id="IntroScene" map="scenes/battlepass_ti10/rewardintro" camera="camera_1" hittest="false" antialias="true" particleonly="false"/>
		<Label class="FrontpageCellHeader" html="true" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_Headline" />
		<Label class="FrontpageCellHeaderRight" html="true" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_30Percent2" />

		<Panel id="TitleContainer">
			<Label id="PercentOffLabel" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_30Percent"/>
			
			<!--                                                                                       -->
			<Label id="BundleTitle" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_Levels"/>
			<!--                                                                             -->
			<Label id="BundleWeekendOnly" html="true" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_Date" />
			<!--                                                                                                    -->
		</Panel>

		<!--                                 
			                                      
			                                                                        
		         -->

		<Panel id="Footer">
			<Panel id="BundleContents">
					<!--                                                                         -->
					<Label class="BundleLevels" text="#DOTA_SplashAd_TI10_Mini_Weekend_Sale_Levels" html="true" />
					
				</Panel>
			<Panel id="PurchaseContainer">

				<Panel class="PurchaseButtonsRow">
					<Button id="PurchaseOneButton" class="PurchaseButton" onactivate="DOTAInternational2020PurchaseEndOfBattlePassSale( 1 )">
						<Label class="PurchaseLabel" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_One" />
						<Label class="PurchasePrice" text="{s:one_bundle_price}" />
					</Button>
					<Button id="PurchaseTwoButton" class="PurchaseButton" onactivate="DOTAInternational2020PurchaseEndOfBattlePassSale( 2 )">
						<Label class="PurchaseLabel" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Two" />
						<Label class="PurchasePrice" text="{s:two_bundles_price}" />
					</Button>
				</Panel>

				<Label class="PurchaseNeedsOwnership PurchaseStateTitle" text="#DOTA_SplashAd_TI6_Weekend_BattlePassOwnershipRequired" />
				<Label class="PurchaseAvailable PurchaseStateTitle" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Message1" />
				<Label class="PurchaseComplete PurchaseStateTitle" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Message2" />
				<Label class="PurchaseStatus" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Status" />

			</Panel>
		</Panel>



	</DOTAFrontpageInternational2020EndOfBattlePassSale>
</root>
