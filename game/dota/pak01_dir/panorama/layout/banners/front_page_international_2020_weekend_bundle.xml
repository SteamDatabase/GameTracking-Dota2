<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_international_2020_weekend_bundle.vcss_c" />
	</styles>

	<DOTAFrontpageInternational2020WeekendBundle class="FrontpageCell" onactivate="DOTAShowItemDefPage( 21652 )" bundle-item-def="21652">

		<Panel class="BackgroundImage" />
		<Panel class="BundleImage" />

		<Panel id="TitleContainer">
			<Label id="PercentOffLabel" text="#DOTA_SplashAd_TI8_Weekend_Savings"/>
			<Label id="BundleWeekendOnly" text="#DOTA_SplashAd_TI10_Weekend_Sale_Title2" />
			<Label id="BundleTitle" text="#DOTA_SplashAd_TI6_Weekend_Battle_Bundle"/>
			<!-- <Label id="BundleWeekendOnly" text="#FrontPage_BattlePassBundle_Weekend" /> -->

			<Label id="TwoLimit" html="true" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Limit_Expanded"/>

		</Panel>

		<!-- <Panel id="LevelShieldContents">
			<Label id="LevelsAmount" text="120" />
			<Label id="LevelsLabel" text="#DOTA_Armory_Category_CompendiumLevels" />
		</Panel> -->

		<Panel id="Footer">
			<Panel id="BundleContents">
					<!-- <Label id="PercentOffLabel" text="#DOTA_SplashAd_TI8_Weekend_Savings"/> -->
					<Label class="BundleLevels" text="#DOTA_BattleLevelBundle_TI9_Levels" html="true" />
					<Panel id="ImmortalsContent" >
						<Label text="#DOTA_BattleLevelBundle_TI9_Treasure1" html="true" />
						<Label text="|" class="Divider" />
						<Label text="#DOTA_BattleLevelBundle_TI9_Treasure2" html="true" />
						<Label text="|" class="Divider" />
						<Label text="#DOTA_BattleLevelBundle_TI9_Treasure3" html="true" />
					</Panel>
				</Panel>
			<Panel id="PurchaseContainer">

				<Panel class="PurchaseButtonsRow">
					<Button id="PurchaseOneButton" class="PurchaseButton" onactivate="DOTAInternational2020PurchaseWeekendBundle( 1 )">
						<Label class="PurchaseLabel" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_One" />
						<Label class="PurchasePrice" text="{s:one_bundle_price}" />
					</Button>
					<Button id="PurchaseTwoButton" class="PurchaseButton" onactivate="DOTAInternational2020PurchaseWeekendBundle( 2 )">
						<Label class="PurchaseLabel" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Two" />
						<Label class="PurchasePrice" text="{s:two_bundles_price}" />
					</Button>
				</Panel>

				<Label class="PurchaseNeedsOwnership PurchaseStateTitle" text="#DOTA_SplashAd_TI6_Weekend_BattlePassOwnershipRequired" />
				<Label class="PurchaseAvailable PurchaseStateTitle" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Message1" />
				<Label class="PurchaseComplete PurchaseStateTitle" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Message2" />
				<Label class="PurchaseStatus" text="#DOTA_SplashAd_TI10_Weekend_Sale_Purchase_Status" />

			</Panel>
		</Panel>



	</DOTAFrontpageInternational2020WeekendBundle>
</root>
