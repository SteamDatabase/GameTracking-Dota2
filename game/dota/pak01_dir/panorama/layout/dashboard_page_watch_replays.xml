<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_watch_replays.vcss_c" />
	</styles>

	<DOTAWatchReplaysPage class="DashboardPage">

		<Panel id="Row0" class="RowContainer">
			<Label class="RowHeader" text="#DOTA_WatchReplays_TournamentsHeader" />
			<Carousel id="ReplaysCarouselRow0" class="CarouselRow" hittest="false">
				<!-- Dynamic panels filled with DOTAWatchReplayGameElement here -->
			</Carousel>
			<CarouselNav class="TransportControls" carouselid="ReplaysCarouselRow0" maxpips="8" />
			<Panel id="Row0Spinner" class="ReplaysSpinner"><Panel class="Spinner"/></Panel>
		</Panel>

		<Panel id="Row1" class="RowContainer">
			<Label class="RowHeader" text="#DOTA_WatchReplays_FriendsHeader" />
			<Carousel id="ReplaysCarouselRow1" class="CarouselRow" hittest="false">
				<!-- Dynamic panels filled with DOTAWatchReplayGameElement here -->
			</Carousel>
			<CarouselNav class="TransportControls" carouselid="ReplaysCarouselRow1" maxpips="8" />
			<Panel id="Row1Spinner" class="ReplaysSpinner">
				<Panel class="Spinner"/>
			</Panel>
		</Panel>
		
		<Panel id="Row2" class="RowContainer">
			<Panel class="RowHeaderLeft">
				<Label class="RowHeader" text="#DOTA_WatchReplays_SavedForLater" />
				<Button class="RowHeaderLink" onactivate="DOTAShowWatchDownloadsPage()">
					<Label text="#DOTA_WatchTabName_Downloads" />
					<Panel class="RowHeaderLinkIcon" />
				</Button>
			</Panel>
			<Carousel id="ReplaysCarouselRow2" class="CarouselRow" hittest="false">
				<!-- Dynamic panels filled with DOTAWatchReplayGameElement here -->
			</Carousel>
			<CarouselNav class="TransportControls" carouselid="ReplaysCarouselRow2" maxpips="8" />
			<Panel id="Row2Spinner" class="ReplaysSpinner">
				<Panel class="Spinner"/>
			</Panel>
		</Panel>

	</DOTAWatchReplaysPage>
</root>
