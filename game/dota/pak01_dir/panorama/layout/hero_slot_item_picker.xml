<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hero_slot_item_picker.vcss_c" />
	</styles>

	<DOTAHeroSlotItemPicker>
		<Panel class="Header">
			<Label id="SlotItemCount" text="{d:slot_item_count}" />
			<Label id="SlotName" text="{s:slot_name}" />
		</Panel>

		<Button id="SlotEconItemButton" onactivate="DOTAShowHeroSlotItemPickerContextMenu()">
			<DOTAEconItem id="SlotEconItem" class="DisableInspect" hittest="false" hittestchildren="false" />
			<Panel id="MenuArrow" />
		</Button>
	</DOTAHeroSlotItemPicker>
</root>
