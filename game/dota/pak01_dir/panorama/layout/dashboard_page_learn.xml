<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn.vcss_c" />
	</styles>

	<Panel class="DashboardPage LearnPage">
		<Panel id="ChallengesContainer">
				<Panel class="NavContainer">
					<Panel class="ChallengeImageContainer">
						<Panel class="ChallengeImage Image1" onactivate="DOTAActivateLearnPage(1);"/>
						<Label class="ChallengeImageNumber" text="1"/>
						<Label class="ChallengeImageTitle" text="#DOTA_LearnMechanics_Title"/>
					</Panel>
					<Panel class="ChallengeImageContainer">
						<Panel class="ChallengeImage Image2" onactivate="DOTAActivateLearnPage(2);"/>
						<Label class="ChallengeImageNumber" text="2"/>
						<Label class="ChallengeImageTitle" text="#npc_dota_hero_dragon_knight"/>
					</Panel>
					<Panel class="ChallengeImageContainer">
						<Panel class="ChallengeImage Image3" onactivate="DOTAActivateLearnPage(3);"/>
						<Label class="ChallengeImageNumber" text="3"/>
						<Label class="ChallengeImageTitle" text="#npc_dota_hero_sniper"/>
					</Panel>
					<Panel class="ChallengeImageContainer">
						<Panel class="ChallengeImage Image4" onactivate="DOTAActivateLearnPage(4);"/>
						<Label class="ChallengeImageNumber" text="4"/>
						<Label class="ChallengeImageTitle" text="#npc_dota_hero_shadow_shaman"/>
					</Panel>
					<Panel class="ChallengeImageContainer">
						<Panel class="ChallengeImage Image5" onactivate="DOTAActivateLearnPage(5);"/>
						<Label class="ChallengeImageNumber" text="5"/>
						<Label class="ChallengeImageTitle" text="#DOTA_Tutorial_Co-op_Match"/>
					</Panel>
					<Panel class="ChallengeImageContainerLast">
						<Panel class="ChallengeImage Image6" onactivate="DOTAActivateLearnPage(6);"/>
						<Label class="ChallengeImageNumber" text="6"/>
						<Label class="ChallengeImageTitle" text="#DOTA_Tutorial_Multiplayer_Match"/>
					</Panel>
				</Panel>
				<Panel class="ChallengeContent">
					<Panel class="TopBottomFlow TutorialDescContainer Page1">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="1"/>
                            <Label class="TutorialName" text="#DOTA_Tutorial_Mechanics"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Mechanics_Desc"/>
                        <Label class="TutorialSubHead" text="DOTA_Tutorial_TopicsCovered"/>
                        <Label class="TutorialMechanicsBullets" text="#DOTA_Tutorial_Mechanics_Bullets" html="true"/>
                        <Button class="ButtonBevel StartTutorialButton" onactivate="DOTALaunchMechanicsTutorial();">
                            <Label text="#DOTA_StartMechanicsTutorial"/>
                        </Button>
                    </Panel>
                    <Panel class="TopBottomFlow TutorialDescContainer Page2">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="2"/>
                            <Label class="TutorialName" text="Dragon Knight"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Strength_Desc"/>
                        <Label class="TutorialSubHead" text="dota_settings_abilities"/>
                        <Panel class="HeroAbilities">
                            <DOTAAbilityImage class="AbilityImage" abilityname="dragon_knight_breathe_fire" onmouseover="DOTAShowAbilityTooltip( 'dragon_knight_breathe_fire' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="dragon_knight_dragon_tail" onmouseover="DOTAShowAbilityTooltip( 'dragon_knight_dragon_tail' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="dragon_knight_dragon_blood" onmouseover="DOTAShowAbilityTooltip( 'dragon_knight_dragon_blood' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="dragon_knight_elder_dragon_form" onmouseover="DOTAShowAbilityTooltip( 'dragon_knight_elder_dragon_form' )" onmouseout="DOTAHideAbilityTooltip()"/>
                        </Panel>
                        <Label class="HoverText" text="DOTA_Tutorial_HoverText" />
                        <Button class="ButtonBevel" onactivate="DOTALaunchLearnBotMatch( 'npc_dota_hero_dragon_knight' );">
                            <Label text="#DOTA_StartSoloBotMatchTutorial"/>
                        </Button>
                    </Panel>
                    <Panel class="TopBottomFlow TutorialDescContainer Page3">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="3"/>
                            <Label class="TutorialName" text="Sniper"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Agility_Desc"/>
                        <Label class="TutorialSubHead" text="dota_settings_abilities"/>
                        <Panel class="HeroAbilities">
                            <DOTAAbilityImage class="AbilityImage" abilityname="sniper_shrapnel" onmouseover="DOTAShowAbilityTooltip( 'sniper_shrapnel' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="sniper_headshot" onmouseover="DOTAShowAbilityTooltip( 'sniper_headshot' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="sniper_take_aim" onmouseover="DOTAShowAbilityTooltip( 'sniper_take_aim' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="sniper_assassinate" onmouseover="DOTAShowAbilityTooltip( 'sniper_assassinate' )" onmouseout="DOTAHideAbilityTooltip()"/>
                        </Panel>
                        <Label class="HoverText" text="DOTA_Tutorial_HoverText" />
                        <Button class="ButtonBevel" onactivate="DOTALaunchLearnBotMatch( 'npc_dota_hero_sniper' );">
                            <Label text="#DOTA_StartSoloBotMatchTutorial"/>
                        </Button>
                    </Panel>
                    <Panel class="TopBottomFlow TutorialDescContainer Page4">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="4"/>
                            <Label class="TutorialName" text="Shadow Shaman"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Intelligence_Desc"/>
                        <Label class="TutorialSubHead" text="dota_settings_abilities"/>
                        <Panel class="HeroAbilities">
                            <DOTAAbilityImage class="AbilityImage" abilityname="shadow_shaman_ether_shock" onmouseover="DOTAShowAbilityTooltip( 'shadow_shaman_ether_shock' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="shadow_shaman_voodoo" onmouseover="DOTAShowAbilityTooltip( 'shadow_shaman_voodoo' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="shadow_shaman_shackles" onmouseover="DOTAShowAbilityTooltip( 'shadow_shaman_shackles' )" onmouseout="DOTAHideAbilityTooltip()"/>
                            <DOTAAbilityImage class="AbilityImage" abilityname="shadow_shaman_mass_serpent_ward" onmouseover="DOTAShowAbilityTooltip( 'shadow_shaman_mass_serpent_ward' )" onmouseout="DOTAHideAbilityTooltip()"/>
                        </Panel>
                        <Label class="HoverText" text="DOTA_Tutorial_HoverText" />
                        <Button class="ButtonBevel" onactivate="DOTALaunchLearnBotMatch( 'npc_dota_hero_shadow_shaman' );">
                            <Label text="#DOTA_StartSoloBotMatchTutorial"/>
                        </Button>
                    </Panel>
                    <Panel class="TopBottomFlow TutorialDescContainer Page5">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="5"/>
                            <Label class="TutorialName" text="#DOTA_Tutorial_Co-op_Match"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Co-op_Desc"/>
                        <Button class="ButtonBevel" onactivate="DOTALaunchLearnCoopBotMatch();">
                            <Label text="#DOTA_StartCoopBotMatchTutorial"/>
                        </Button>
                    </Panel>
                    <Panel class="TopBottomFlow TutorialDescContainer Page6">
                        <Panel class="LeftRightFlow">
                            <Label class="TutorialNumber" text="6"/>
                            <Label class="TutorialName" text="#DOTA_Tutorial_Multiplayer_Match"/>
                        </Panel>
                        <Label class="TutorialDesc" text="#DOTA_Tutorial_Multiplayer_Desc"/>
                        <Button class="ButtonBevel" onactivate="DOTALaunchLearnUnrankedMatch();">
                            <Label text="#DOTA_StartMultiplayerMatchTutorial"/>
                        </Button>
                    </Panel>
				</Panel>
		</Panel>
		<DOTALargeModelPreview class="Preview" id="HeroPreview" hittest="false" hittestchildren="false" />
	</Panel>
</root>
