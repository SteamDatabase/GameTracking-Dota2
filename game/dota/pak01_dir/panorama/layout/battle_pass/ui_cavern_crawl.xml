					<Panel class="RewardsRemainingRow">
						<Label class="RewardsRemainingName" text="{s:remaining_reward_name_1}" />
						<Label class="RewardsRemainingValue" html="true" text="#DOTA_CavernCrawl_RewardsClaimed1" />
					</Panel>				
				</Panel>
				
			</Panel>
				
