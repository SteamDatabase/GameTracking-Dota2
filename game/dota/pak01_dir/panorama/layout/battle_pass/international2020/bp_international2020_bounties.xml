<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/compendiums/compendium_styles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_bounties.vcss_c" />
	</styles>

	<script><![CDATA[
	]]></script>

	<DOTABPInternational2020BountiesPage class="DashboardPage BattlePassPage">

		<Panel id="CompendiumBody" class="CompendiumBody">
			<Panel id="BountiesBG" />
			<Panel id="CampaignVignette">
				<Panel id="WageringBody">
					<Panel id="WageringTopSection" class="LeftRightFlow">
						<Panel id="BountiesMySection" class="WageringPanel">
							<Label class="BountiesTitle" text="#DOTA_TI10_FrontPage_Bounties_Title" />
							<Label class="BountiesDesc" html="true" text="#DOTA_SeasonPass_Bounties_OverallDesc" />

							<AsyncDataPanel state="{d:bounty_info_status}">
								<Panel id="BountiesCounter" class="AsyncSuccessContainer">
									<Label class="BountyCounter" text="#DOTA_Compendium_Bounties_Counter" />
									<Label class="BountyCounterLabel" text="#DOTA_Compendium_Bounties_Counter_Label" />
									<Label class="BountyCounterTimer" text="#DOTA_Compendium_Bounties_Counter_Timer" />
								</Panel>
							</AsyncDataPanel>
						</Panel>
						
					</Panel>
					<Panel id="WageringBottomSection" class="WageringPanel">
						<Panel class="LeftRightFlow HorizontalAlignCenter">
							<Panel class="DetailsQuad">
								<Panel id="HowTo1" class="HowToImage"/>
								<Label class="DetailsTitle" text="#DOTA_SeasonPass_Bounties_Desc1"/>
								<Label class="DetailsText" text="#DOTA_Compendium_Bounties_HowTo1"/>
								<Panel class="InfoIcon"/>
							</Panel>
							<Panel class="DetailsQuad">
								<Panel id="HowTo2" class="HowToImage"/>
								<Label class="DetailsTitle" text="#DOTA_SeasonPass_Bounties_Desc2"/>
								<Label class="DetailsText" text="#DOTA_Compendium_Bounties_HowTo2"/>
								<Panel class="InfoIcon"/>
							</Panel>
							<Panel class="DetailsQuad">
								<Panel id="HowTo3" class="HowToImage"/>
								<Label class="DetailsTitle" text="#DOTA_SeasonPass_Bounties_Desc3"/>
								<Label class="DetailsText" text="#DOTA_Compendium_Bounties_HowTo3" html="true"/>
								<Panel class="InfoIcon"/>
							</Panel>
							<!--                            
								                                       
								                                                                    
								                                                                    
								                         
							         -->
						</Panel>
						<Panel id="Next1" class="DetailsNext" hittest="false"/>
						<Panel id="Next2" class="DetailsNext" hittest="false"/>
						<!--                                                         -->
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</DOTABPInternational2020BountiesPage>
