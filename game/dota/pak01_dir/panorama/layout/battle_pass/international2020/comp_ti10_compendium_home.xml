					<Panel id="AchievementIntro" >
						<Panel class="VerticalCenter LeftRightFlow">
							<Panel class="AchievementIntroLabels">
								<Label class="AchievementIntroTitle" text="#DOTA_CompTI10_Achievements_GetStarted_Title"/>
