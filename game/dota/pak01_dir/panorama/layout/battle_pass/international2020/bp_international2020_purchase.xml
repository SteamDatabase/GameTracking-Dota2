<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2020/bp_international2020_purchase.vcss_c" />
	</styles>

	<script><![CDATA[
		$.Schedule( 0.0, function()
		{
			$( '#Tier1-bg' ).SetDialogVariableInt( 'battle_pass_item_def', 17530 );
			$( '#Tier2-bg' ).SetDialogVariableInt( 'battle_pass_item_def', 17531 );
			$( '#Tier3-bg' ).SetDialogVariableInt( 'battle_pass_item_def', 17532 );
		});
	]]></script>

	<DOTABPInternational2020PurchasePage class="DashboardPage BattlePassPage FullScreenBackground" hittest="false">
		<Panel id="DashboardBackgroundOverlay" />
		<Panel id="PageInterior">
			<!--                                                                                                                                                             -->
			<!--                           -->

			<Panel id="PurchaseOptions">
				<Panel id="PurchaseTiers">
					<Panel id="LogoContainer">
						<Panel id="BattlePassPurchaseLogo"/>
						<Label id="PurchaseEndDate" html="true" text="#TI2020_BP_Buy_End_Date" />
						<Label id="BattlePassPurchaseTitle" class="test" text="#TI2020_BP_Buy_Block_Title"/>
						<Label id="BattlePassGiftingTitle" class="test" text="#TI2020_BP_Buy_Gifting_Title"/>
					
						<Label id="BattlePassDescription" text="#TI2020_BP_Buy_Block_Desc" />
						
					
						<Panel id="GiftingCounter">
							<Label class="GiftingTitle" text="#TI2020_BP_Buy_Gifting_SubTitle" />
							<Label class="GiftingDesc" text="#TI2020_BP_Buy_Gifting_Desc" />
							<Panel id="ProgressBar">
								<Panel class="Rewards">
									<Panel id="Reward1">
										<Label class="RewardTitle" text="#DOTA_TI10BP_Gifting_RewardTitle"/>
										<Panel class="XPCircle">
											<Label text="2000" class="AchievementReward"/>
											<Panel class="PTS"/>
										</Panel>
										<Label class="RewardText" text="#DOTA_TI10BP_Gifting_RewardTitle1"/>
										<Panel class="DownArrow"/>										
									</Panel>
									<Panel id="Reward2">
										<Label class="RewardTitle" text="#DOTA_TI10BP_Gifting_RewardTitle"/>
										<Panel class="XPCircle">
											<Label text="4000" class="AchievementReward"/>
											<Panel class="PTS"/>
										</Panel>
										<Label class="RewardText" text="#DOTA_TI10BP_Gifting_RewardTitle2"/>
										<Panel class="DownArrow"/>
									</Panel>
									<Panel id="Reward3">
										<Label class="RewardTitle" text="#DOTA_TI10BP_Gifting_RewardTitle"/>
										<Panel class="XPCircle">
											<Label text="10000" class="AchievementReward"/>
											<Panel class="PTS"/>
										</Panel>
										<Label class="RewardText" text="#DOTA_TI10BP_Gifting_RewardTitle3"/>
										<Panel class="DownArrow"/>
									</Panel>
								</Panel>
								<Panel id="Bar">
									<Panel class="Notch" id="Notch1"/>
									<Panel class="Notch" id="Notch2"/>
									<Panel class="Notch" id="Notch3"/>
									<Panel class="Notch" id="Notch4"/>
									<Panel class="Notch" id="Notch5"/>
								</Panel>
							</Panel>
						</Panel>
					</Panel>

					<Panel id="TierContainer">
						<Panel id="Tier1-bg" class="Tier">
							<Panel id="TierContent">
								<Panel id="BattlePassLogoSmall"/>
								<Label id="TierName" text="#TI2020_BP_Buy_Base" />
							</Panel>
							
							<Panel class="TierButtons add-space">
								<TextButton class="PurchaseOptionButton PurchaseOptionActivate Tier1-btn BuyBtn"  text="#DOTA_PurchaseBattlePass_Price" onactivate="DOTAPurchaseBattlePassInternational2020( 17530 )" />
								<TextButton class="PurchaseOptionButton PurchaseOptionGift Tier1-btn BuyBtn" text="#DOTA_PurchaseBattlePassAsGift_Price" onactivate="DOTAPurchaseItemAsGift( 17530, BattlePass_Gift )" />
							</Panel>

						</Panel>

						<Panel id="Tier2-bg" class="Tier">
							<Panel id="TierContent">
								<Panel id="BattlePassLogoSmall"/>
								<Label id="TierName" text="#TI2020_BP_Buy_50" />
								<Label id="TierDesc1" text="#TI2020_BP_Buy_Desc" />
								<Label id="TierDesc2" text="#TI2020_BP_Buy_50_Desc" />
							</Panel>


							<Panel class="TierButtons">
								<TextButton class="PurchaseOptionButton PurchaseOptionActivate Tier2-btn BuyBtn" text="#DOTA_PurchaseBattlePass_Price" onactivate="DOTAPurchaseBattlePassInternational2020( 17531 )" />
								<TextButton class="PurchaseOptionButton PurchaseOptionGift Tier2-btn BuyBtn " text="#DOTA_PurchaseBattlePassAsGift_Price" onactivate="DOTAPurchaseItemAsGift( 17531, BattlePass_Gift )" />
							</Panel>

							<Panel class="DiscountText">
								<Label class="TierDesc save-text" text="#TI2020_BP_Buy_50_Disc" />
								<Label class="TierDesc" text="#TI2020_BP_Buy_Included_Levels" />
							</Panel>

						</Panel>

						<Panel id="Tier3-bg" class="Tier">
							<Panel id="TierContent">
								<Panel id="BattlePassLogoSmall"/>
								<Label id="TierName" text="#TI2020_BP_Buy_100" />
								<Label id="TierDesc1" text="#TI2020_BP_Buy_Desc" />
								<Label id="TierDesc2" text="#TI2020_BP_Buy_100_Desc" />
							</Panel>

							<Panel class="TierButtons">
								<TextButton class="PurchaseOptionButton PurchaseOptionActivate Tier3-btn BuyBtn" text="#DOTA_PurchaseBattlePass_Price" onactivate="DOTAPurchaseBattlePassInternational2020( 17532 )" />
								<TextButton class="PurchaseOptionButton PurchaseOptionGift Tier3-btn BuyBtn" text="#DOTA_PurchaseBattlePassAsGift_Price" onactivate="DOTAPurchaseItemAsGift( 17532, BattlePass_Gift )" />
							</Panel>
							<Panel class="DiscountText">
								<Label class="TierDesc save-text" text="#TI2020_BP_Buy_100_Disc" />
								<Label class="TierDesc" text="#TI2020_BP_Buy_Included_Levels" />
							</Panel>
							
						</Panel>

						
					</Panel>



					<Panel id="FooterInfo">
						<Label id="PurchasePoolContribution" text="#DOTA_TI10BP_purchase_pool_contribution" />
						<Panel id="InfoButtons">
							<TextButton class="BattlePassButton" text="#dota_ti8_purchase_learn_more" onactivate="ExternalBrowserGoToURL( 'http://www.dota2.com/international/battlepass' )" />
							<TextButton class="BattlePassButton" text="#dota_ti8_purchase_preview" onactivate="DOTAShowBPInternational2020HomePage()" />
						</Panel>
					</Panel>

					

				</Panel>
			</Panel>

			<Button id="CancelButton" class="CloseButton" onactivate="DOTANavigateBack()" />

		</Panel>

		<Panel id="BuyFlowers" hittest="false" />


	</DOTABPInternational2020PurchasePage>
</root>
