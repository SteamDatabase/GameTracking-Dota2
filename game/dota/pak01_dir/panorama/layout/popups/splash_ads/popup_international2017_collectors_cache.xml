<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_international2017_collectors_cache.vcss_c" />
	</styles>

    <script><![CDATA[

    ]]></script>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()" onload="$.GetContextPanel().SetDialogVariableInt( 'cache_item_def', 12027 );">

		<Panel class="Contents">
			

			<Panel id="SplashImage">
				

				<Panel class="SplashImageOverlay">
					<Panel class="OverlayText">
						<Label class="OverlayHeader" text="#DOTA_SplashAd_TI7_CollectorsCache_Exclusive_Header" />
						<Label class="OverlayDetails" text="#DOTA_SplashAd_TI7_CollectorsCache_Exclusive_Text" />
					</Panel>
                    <Panel class="OverlayText">
                        <Label html="true" class="OverlayHeader" text="#DOTA_SplashAd_TI7_CollectorsCache_Alt_Header" />
                        <Label html="true" class="OverlayDetails" text="#DOTA_SplashAd_TI7_CollectorsCache_Alt_Text" />
                    </Panel>

					<Panel class="OverlayText">
						<Label class="OverlayHeader" text="#DOTA_SplashAd_TI7_CollectorsCache_Contribute_Header" />
						<Label class="OverlayDetails" text="#DOTA_SplashAd_TI7_CollectorsCache_Contribute_Text" />
					</Panel>
				</Panel>

				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12027 ) )" />
				
				<Label id="Title" text="#DOTA_SplashAd_TI7_CollectorsCache_Title" />

                <Label id="CachePrice" text="{g:dota_item_price:cache_item_def}" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
