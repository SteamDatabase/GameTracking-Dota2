<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_international2019_collectors_cache.vcss_c" />
	</styles>

	<script>

	</script>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()" onload="$.GetContextPanel().SetDialogVariableInt( 'cache_item_def', 12214 );">

		<Panel class="Contents">

			<Panel id="SplashImage">

				<Panel class="SplashImageOverlay">
					<DOTACountdown id="Countdown" end-time="1562623200" server-time="true">
						<Label class="time-left" text="{t:d:t:T:countdown_time}" />
						<Label class="remaining" text="#DOTA_TI9_Collectors_Cache_Remaining" />
						<Label class="finished" text="#DOTA_TI9_Collectors_Cache_Finished" />
					</DOTACountdown>
					<Panel class="OverlayText">
						<Label class="OverlayHeader" text="#DOTA_SplashAd_TI9_CollectorsCache_Exclusive_Header" />
						<Label class="OverlayDetails" text="#DOTA_SplashAd_TI9_CollectorsCache_Exclusive_Text" />
					</Panel>
					<Panel class="OverlayText">
						<Label html="true" class="OverlayHeader" text="#DOTA_SplashAd_TI9_CollectorsCache_Alt_Header" />
						<Label html="true" class="OverlayDetails" text="#DOTA_SplashAd_TI9_CollectorsCache_Alt_Text" />
					</Panel>
					<!-- <Panel class="OverlayText">
						<Label class="OverlayHeader" text="#DOTA_SplashAd_TI9_CollectorsCache_Contribute_Header" />
						<Label class="OverlayDetails" text="#DOTA_SplashAd_TI9_CollectorsCache_Contribute_Text" />
					</Panel> -->
				</Panel>

				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 13079 ) )" />
				<Panel class="header">
					<Label id="SubTitle" text="#DOTA_SplashAd_TI9_CollectorsCache_SubTitle" />
					<Label id="Title" text="#DOTA_SplashAd_TI9_CollectorsCache_Title" />
				</Panel>
				<Label id="CachePrice" text="{g:dota_item_price:cache_item_def}" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
