<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2018/bp_international2018_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_international2018_weekend_sale.vcss_c" />
	</styles>

	<script><![CDATA[
		$.Schedule( 0, function() { 
			$.RegisterEventHandler( 'Activated', $( '#PurchaseButton' ), function() {
				$.DispatchEvent( "UIPopupButtonClicked", '' ); return false;	
			} );
		} );
	]]></script>
	
	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="Contents">

			<Panel id="TitleBox">
				<Label class="Sub01 SubTitle" text="#DOTA_SplashAd_TI6_Weekend_Battle_Bundle" />
				<Label id="Title" text="#DOTA_SplashAd_TI6_Weekend_Sale_Title" />
				<Label class="Sub02 SubTitle" text="#DOTA_SplashAd_TI7_Weekend_Ends_Monday" />
			</Panel>

			<Panel id="Messaging">
				<Label id="BattleLevels" html="true" text="#DOTA_SplashAd_TI8_Weekend_Levels" />
				<Label id="Treasures" html="true" text="#DOTA_SplashAd_TI8_Weekend_Treasures" />
				<Label id="Savings" text="#DOTA_SplashAd_TI8_Weekend_Savings" />

				<DOTAPurchaseButton id="PurchaseButton" class="Owned" itemdef="21233" itemsource="TI6_WeekendSale_SplashAd"/>
				<DOTAPurchaseButton class="MustOwn" disabled="true" itemdef="21233" itemsource="TI6_WeekendSale_SplashAd" />
				<Label class="Owned PurchaseSubLabel" text="#DOTA_SplashAd_TI6_Weekend_Limit" />
				<Label class="MustOwn PurchaseSubLabel" text="#DOTA_SplashAd_TI6_Weekend_BattlePassOwnershipRequired" />

			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
