<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_overwatch_case_help.vcss_c" />
		<include src="s2r://panorama/styles/hud/hud_reborn.vcss_c" />
	</styles>

	<DOTAPopupOverwatchCaseHelp class="PopupPanel Hidden" popupbackground="dim" oncancel="DOTAPopupOverwatchCaseClose()">

		<Panel id="Header">
			<TextButton id="CloseButton" class="ButtonDark" text="X" onactivate="UIPopupButtonClicked()" />
			<Label text="#DOTA_Review_Overwatch_Help_Title"/>
		</Panel>
		<Panel id="Body">
			<Panel class="StepContainer">
				<Panel class="OverwatchHelpSection Section1">
					<Image class="HelpImage" src="" />
					<Label class="OverwatchHelpTitle" html="true" text="#DOTA_Overwatch_Case_Help_1_Title" />
					<Label class="OverwatchHelpLabel" html="true" text="#DOTA_Overwatch_Case_Help_1"/>

				</Panel>
				<Panel class="OverwatchHelpSection">
					<Image class="HelpImage" src="" />
					<Label class="OverwatchHelpTitle" html="true" text="#DOTA_Overwatch_Case_Help_2_Title" />
					<Label class="OverwatchHelpLabel" html="true" text="#DOTA_Overwatch_Case_Help_2"/>
				</Panel>
				<Panel class="OverwatchHelpSection Section2">
					<Image class="HelpImage" src="" />
					<Label class="OverwatchHelpTitle" html="true" text="#DOTA_Overwatch_Case_Help_3_Title" />
					<Label class="OverwatchHelpLabel"  html="true" text="#DOTA_Overwatch_Case_Help_3"/>
				</Panel>
			</Panel>
			<Panel id="Buttons">
				<TextButton id="OverwatchReviewReplayButton"	class="PopupButton Blue" onactivate=""	>
						<Label text="#DOTA_Review_Overwatch_Help_Ok" />
				</TextButton>
			</Panel>
		</Panel>

		
	</DOTAPopupOverwatchCaseHelp>
</root>
