<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn_guided_bot_matches.vcss_c" />
	</styles>

  <Panel class="DashboardPage LearnPage">
    <Panel id="Header">
      <Panel class="PageTitle">
        <Label text="#DOTA_LearnGuidedBotMatches_Title"/>
      </Panel>
      <Panel class="PageSubTitle">
        <Label text="#DOTA_LearnGuidedBotMatches_SubTitle"/>
      </Panel>
    </Panel>

    <Panel id="ChallengesContainer" class="LeftRightFlow">
      <Panel id="Challenge1" class="ChallengeModule TopBottomFlow" >
        <Panel class="ChallengeImageContainer">
          <Panel class="ChallengeImage"/>
        </Panel>
        <Panel class="ChallengeBody TopBottomFlow">
          <Label id="ChallengeName" text="#DOTA_GuidedBotMatches_0_Title"/>
          <Label id="ChallengeDescription" text="#DOTA_GuidedBotMatches_0_Desc"/>
        </Panel>
        <Panel class="ChallengeRewardContainer NoFlow">
          <DOTAScenePanel id="ChallengeGlow" map="scenes/shining_default" camera="camera_1"/>
          <Button class="ChallengeReward ButtonBevel" onactivate="DOTALaunchGuidedBotMatch(0);">
			<Label text="#DOTA_Start"/>
		  </Button>
        </Panel>
      </Panel>

      <Button id="Challenge2" class="ChallengeModule TopBottomFlow">
        <Panel class="ChallengeImageContainer">
          <Panel class="ChallengeImage"/>
        </Panel>
        <Panel class="ChallengeBody TopBottomFlow">
          <Label id="ChallengeName" text="#DOTA_GuidedBotMatches_1_Title"/>
          <Label id="ChallengeDescription" text="#DOTA_GuidedBotMatches_1_Desc"/>
        </Panel>
        <Panel class="ChallengeRewardContainer NoFlow">
          <DOTAScenePanel id="ChallengeGlow" map="scenes/shining_default" camera="camera_1"/>
          <Button class="ChallengeReward ButtonBevel" onactivate="DOTALaunchGuidedBotMatch(1);" >
			     <Label text="#DOTA_Start"/>
		    </Button>
        </Panel>
      </Button>

      <Button id="Challenge3" class="ChallengeModule TopBottomFlow">
        <Panel class="ChallengeImageContainer">
          <Panel class="ChallengeImage"/>
        </Panel>
        <Panel class="ChallengeBody TopBottomFlow">
          <Label id="ChallengeName" text="#DOTA_GuidedBotMatches_2_Title"/>
          <Label id="ChallengeDescription" text="#DOTA_GuidedBotMatches_2_Desc"/>
        </Panel>
        <Panel class="ChallengeRewardContainer NoFlow">
          <DOTAScenePanel id="ChallengeGlow" map="scenes/shining_default" camera="camera_1"/>
          <Button class="ChallengeReward ButtonBevel" onactivate="DOTALaunchGuidedBotMatch(2);" >
           <Label text="#DOTA_Start"/>
        </Button>
        </Panel>
      </Button>
    </Panel>

  </Panel>
</root>
