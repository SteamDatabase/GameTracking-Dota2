<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_dota_plus_hero_challenge.vcss_c" />
	</styles>

	<DOTAPlusHeroChallenge class="SideQuestBox">
		<Panel id="InfoContainer" class="InfoContainer">
			<Panel class="IconContainer">
				<Image id="ChallengeIcon" class="ChallengeIcon" scaling="stretch-to-fit-y-preserve-aspect" src=""/>
			</Panel>

			<Panel class="TopBottomFlow DescriptionContainer">
				<Panel class="DebugContainer">
					<Label class="DebugLabel" text="{s:challenge_template}"/>
					<Label class="DebugLabel" text="{s:challenge_instance}"/>
				</Panel>
				<Label id="ChallengeDesc" class="ChallengeDescText"/>
				<Panel class="RewardStars LeftRightFlow">
					<Label text="#DOTA_Plus_ChallengeComplete" class="CompleteText"/>
					<Panel class="ChallengeStars">

						<Panel class="RankContainer LeftRightFlow">
							<Panel id="Rank1" class="ChallengeStar Star1" />
							<Panel id="Rank2" class="ChallengeStar Star2" />
							<Panel id="Rank3" class="ChallengeStar Star3" />
						</Panel>
					</Panel>
				</Panel>

				<Panel class="BottomRow LeftRightFlow">
					<Label id="XPRewardLabel" text="#DOTA_Plus_XP" class="RewardLabel"/>
					<Label id="ShardsRewardLabel" text="#DOTA_Plus_Currency" class="RewardLabel"/>
					<Panel class="RankContainer LeftRightFlow">
						<Label id="Rank1Label" class="XPLabel"/>
						<Label id="Rank2Label" class="XPLabel"/>
						<Label id="Rank3Label" class="XPLabel"/>
					</Panel>
				</Panel>

			</Panel>
		</Panel>
		
		<Panel class="ObsoleteContainer">
					<!--                                                                 -->
		</Panel>
	</DOTAPlusHeroChallenge>
</root>
