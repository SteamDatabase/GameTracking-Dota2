<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/store_spotlight_item.vcss_c" />
	</styles>

	<DOTAStoreSpotlightItem>
		<EconItemImage id="ItemImage" />

		<Panel id="BottomGradient" />

		<Panel id="SpotlightDetails">
			<Panel id="SpotlightDetailsLabels">
				<Label id="SpotlightType" text="{s:spotlight_type}"/>
				<Label id="SpotlightDuration" text="#DOTA_Store_SpotlightDuration" />
			</Panel>
			<Label id="SpotlightDiscount" text="-{d:sale_discount}%" />
		</Panel>

		<Label id="ItemName" text="{g:dota_item_name:item_def}" />

		<Panel id="ItemPrices">
			<Label id="ItemBasePrice" text="{g:dota_item_base_price:item_def}" />
			<Label id="ItemPrice" text="{g:dota_item_price:item_def}" />
		</Panel>
	
	</DOTAStoreSpotlightItem>

</root>
