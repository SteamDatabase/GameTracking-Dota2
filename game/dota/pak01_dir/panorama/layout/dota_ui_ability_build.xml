<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_ui_ability_build.vcss_c" />
	</styles>

	<snippets>
		<snippet name="AbilityRow">
			<Panel class="AbilityRow" >
				<DOTAAbilityImage id="AbilityImage" />
				<Panel id="TalentImage" />
				<Panel id="LevelsContainer">
					<!-- LevelSquare instances created by code -->
				</Panel>
			</Panel>
		</snippet>

		<snippet name="LevelSquare">
			<Panel class="LevelSquare" >
				<Label id="LevelLabel" text="{u:level_number}" />
			</Panel>
		</snippet>
	</snippets>
	
	<DOTAAbilityBuild>
		<Panel id="AbilitiesContainer">
			<!-- AbilityRow instances created by code -->
		</Panel>
	</DOTAAbilityBuild>
</root>

