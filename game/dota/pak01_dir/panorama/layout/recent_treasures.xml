		<include src="s2r://panorama/styles/recent_treasures.vcss_c" />
	</styles>

	<snippets>
		<snippet name="TreasureRow">
			<Panel class="TreasureRow">
				<EconItemImage id="TreasureImage" />
				<Label class="TreasureName" text="{g:dota_item_name:item_def}" />
				<Label class="TreasureCount" text="{d:item_count}" />
				<Panel class="TreasureIcon" />
			</Panel>
		</snippet>
	</snippets>

	<DOTARecentTreasures>
		<Panel class="Header">
			<Label text="#DOTA_RecentTreasures" />
		</Panel>

		<Panel id="TreasureRows">
			<!-- TreasureRow snippets -->
		</Panel>
	</DOTARecentTreasures>
	
</root>
