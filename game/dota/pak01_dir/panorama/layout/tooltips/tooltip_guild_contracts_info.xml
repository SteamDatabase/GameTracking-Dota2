<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/guild_contract.vcss_c" />
		<include src="s2r://panorama/styles/guild_contract_slot.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_guild_contracts_info.vcss_c" />
	</styles>

	<Panel class="GuildContractsInfo">
		<Panel class="Header">
			<Label class="Title" text="#DOTA_GuildContracts_Info_Header" />
		</Panel>
		<Label class="Description" text="#DOTA_GuildContracts_Info_Description" html="true" />
		<Panel class="RewardsTable">
			<Panel class="RewardRow">
				<Panel class="StarsContainer StarCount1">
					<Panel id="StarsCenter" class="GuildImageColorAdjusted">
						<Panel id="Star1" class="ContractStar" />
					</Panel>
				</Panel>
				<Panel class="Rewards">
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_guildpoint_value1}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_GuildPoints"/>
					</Panel>
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_battlepoint_value1}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_BattlePoints"/>
					</Panel>
				</Panel>
			</Panel>


			<Panel class="RewardRow">
				<Panel class="StarsContainer StarCount2">
					<Panel id="StarsCenter" class="GuildImageColorAdjusted">
						<Panel id="Star1" class="ContractStar" />
						<Panel id="Star2" class="ContractStar" />
					</Panel>
				</Panel>
				<Panel class="Rewards">
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_guildpoint_value2}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_GuildPoints"/>
					</Panel>
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_battlepoint_value2}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_BattlePoints"/>
					</Panel>
				</Panel>
			</Panel>


			<Panel class="RewardRow">
				<Panel class="StarsContainer StarCount3">
					<Panel id="StarsCenter" class="GuildImageColorAdjusted">
						<Panel id="Star1" class="ContractStar" />
						<Panel id="Star2" class="ContractStar" />
						<Panel id="Star3" class="ContractStar" />
					</Panel>
				</Panel>
				<Panel class="Rewards">
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_guildpoint_value3}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_GuildPoints"/>
					</Panel>
					<Panel class="RewardPointsContainer">
						<Label class="RewardPointDescText" text="+"/>
						<Label class="RewardPointValue MonoNumbersFont" text="{d:contract_battlepoint_value3}"/>
						<Label class="RewardPointDescText PointsSuffix" text="#DOTA_GuildContracts_BattlePoints"/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
