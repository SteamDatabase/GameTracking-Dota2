<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/battle_pass_activities/tooltip_battle_pass_guild.vcss_c" />
	</styles>

	<Panel>
		<Label class="Title" text="{g:dota_guild_name:guild_id}" />

		<Panel class="MainContents">
			<Panel class="SingleStat">
				<Label class="StatValue" text="{d:contract_slots_completed} / {d:contract_slots_unlocked}" />
				<Label class="StatLabel" text="#DOTA_BattlePass_GuildTooltip_ContractsCompleted" />
			</Panel>
			<Panel class="SingleStat">
				<Label class="StatValue" text="{d:challenges_completed} / {d:challenges_per_week}" />
				<Label class="StatLabel" text="#DOTA_BattlePass_GuildTooltip_ChallengesCompleted" />
			</Panel>
		</Panel>
	</Panel>
</root>
