<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/battle_pass_activities/tooltip_battle_pass_cavern_crawl.vcss_c" />
	</styles>

	<Panel>
		<Label class="Title" text="{g:dota_cavern_name:cavern_event_id}" />

		<Panel class="MainContents">
			<Panel class="StatsRow">
				<Panel class="SingleStat">
					<Label class="StatValue" text="{d:rooms_claimed} / {d:total_rooms}" />
					<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_RoomsCompleted" />
				</Panel>
				<Panel class="SingleStat">
					<Label class="StatValue" text="{d:rooms_claimed_variant_1} / {d:total_rooms}" />
					<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_RoomsCompletedV1" />
				</Panel>
				<Panel class="SingleStat">
					<Label class="StatValue" text="{d:points_earned}" />
					<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_BattlePointsEarned" />
				</Panel>
			</Panel>

			<Panel class="SetRewards">
				<DOTAUIEconSetPreview id="CarryReward" itemdef="21412" drawbackground="false" />
				<DOTAUIEconSetPreview id="SupportReward" itemdef="21409" drawbackground="false" />
				<DOTAUIEconSetPreview id="UtilityReward" itemdef="21404" drawbackground="false" />
			</Panel>
			<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_SetsEarned" />

			<Panel class="StatsRow">
				<Panel class="MapVariantUnlockContainer">
					<Panel class="MapVariantUnlock Carry" />
				</Panel>
				<Panel class="MapVariantUnlockContainer">
					<Panel class="MapVariantUnlock Support" />
				</Panel>
				<Panel class="MapVariantUnlockContainer">
					<Panel class="MapVariantUnlock Utility" />
				</Panel>
			</Panel>
			<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_MapVariantUnlocksEarned" />
			
		</Panel>

	</Panel>
</root>
