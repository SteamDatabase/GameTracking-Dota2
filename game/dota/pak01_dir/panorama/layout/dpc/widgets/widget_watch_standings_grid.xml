<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dpc/schedule.vcss_c" />
		<include src="s2r://panorama/styles/dpc/widgets/widget_watch_standings_grid.vcss_c" />
	</styles>

	<snippets>

		<snippet name="Match">
			<Panel class="Match">
				<Label class="TeamText" text="{d:score1} - {d:score2}"/>
				<Label class="NoTeamText" text=" - "/>
			</Panel>
		</snippet>

		<snippet name="Team">
			<Panel class="Team">
				<DOTATeamImage id="TeamLogo" teamimagestyle="squarelarge"/>
				<Panel class="TeamNoLogo"/>
			</Panel>
		</snippet>

	</snippets>

	<DotaDPCMiniScheduleWidget class="TopBottomFlow">
		<Panel id="TeamsContainer" class="LeftRightFlow"/>
		<Panel id="MatchesContainer" class="TopBottomFlow"/>
	</DotaDPCMiniScheduleWidget>
</root>
